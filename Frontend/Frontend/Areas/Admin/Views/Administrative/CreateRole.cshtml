@model Result<RoleRequestDTO>

@{
    ViewData["Title"] = "CreateRole";
    Layout = "_LayoutNull";

}
<form asp-action="CreateRole" asp-controller="Administrative" method="post">
    <div class="flex-grow-1">
        <h3 class="text-center">Create Role</h3>
        <hr class="hrClass" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-3">
            <label asp-for="Response.Name" class="control-label"></label>
            <input asp-for="Response.Name" class="form-control" />
            <span asp-validation-for="Response.Name" class="text-danger"></span>
        </div>
        <input type="submit" value="Update Role" class="btn btn-primary w-100 mt-3" />
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
