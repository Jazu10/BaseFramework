@model RegistrationRequestDTO

@{
    Layout = "_MenuLayout";
    ViewData["Title"] = "Register";
}
@*<h2 style="text-align:center;color:#022891;font-weight:700;padding-top:-20px">User Registeration</h2>*@
<div class="toolbar h-45px">
    <div class="container-fluid d-flex flex-stack">
        <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
            <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">User Registeration</h1>
            <span class="h-20px border-gray-200 border-start mx-4"></span>
        </div>
    </div>
</div>


<div style="padding:0px 1rem" class=" container-fluid d-flex flex-stack ">
    <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
        <div style="background-color:#ffffff; padding:2rem; border-radius:5px; box-shadow: 0px 0 30px rgba(1, 41, 112, 0.1);" class="card-body">
            <!-- Upload Picture -->
            <div class="details-tab">
                <div class="row" @*asp-validation-summary="ModelOnly"*@>
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="FirstName" for="fn" class="col-form-label control-label">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control" value="" id="fn"  >
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="LastName " for="ln" class="col-form-label control-label">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control" value="" id="ln"  >
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="PhoneNumber" for="phone" class="col-form-label control-label">Phone</label>
                            <input asp-for="PhoneNumber" type="number" class="form-control"  >
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label">
                            <label asp-for="DOB" class="col-form-label control-label">Date of Birth</label>
                            <input asp-for="DOB" type="date" class="form-control" id="dob"  >
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="Gender" class="col-form-label control-label">Gender</label>
                            <select asp-for="Gender" id="dropdowntipo" class="form-control"  >
                                @*<option>----select----</option>*@
                                <option hidden>---Select an Option---</option>
                                <option value="Male"> Male</option>
                                <option value="Female">Female</option>

                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>


                        </div>


                    </div>
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label">
                            <label asp-for="DOJ" class="col-form-label control-label">Date of Joining</label>
                            <input asp-for="DOJ" type="date" class="form-control" id="birthdate-picker"  >
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-6">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="File" class="col-form-label control-label">Image</label>
                            <input asp-for="File" class="form-control">
                            <span class="text-danger" asp-validation-for="File"></span>
                        </div>
                    </div>


                    <div class="col-12 col-sm-6 col-md-8">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="Address" class="col-form-label control-label">Address</label>
                            <input asp-for="Address" type="form-control" class="form-control"  >
                            <span asp-validation-for="Address" class="text-danger"></span>

                        </div>
                    </div>


                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="EmailId" class="col-form-label control-label">Email-ID</label>
                            <input asp-for="EmailId" class="form-control"  >
                            <span asp-validation-for="EmailId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label asp-for="Password" class="col-form-label control-label">Password</label>
                            <input asp-for="Password" class="form-control" id="age"  >
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label ">
                            <label class="col-form-label control-label">Confirm-Password</label>
                            <input asp-for="ConfirmPassword" class="form-control"  >
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="text-align:center">
                        <div style="padding-top:50px">

                            <input type="submit" value="Submit" class="btn  btn-bg-light btn-active-color-success  " style="border-radius: 8px;" />
                        </div>

                    </div>



                </div>
            </div>
        </div>
    </form>
</div>


@section scripts{





    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }



}
